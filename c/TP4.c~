    void cons(text ordre){
    if(ordre== baleine){baleine();}
    if(ordre== jambe){mister();}
    if(ordre== trait){trait();}
    if(ordre== rectangle){rectangle();}
    if(ordre==triangle){triangle();}
    if(ordre==cercle)[cercle();}
  }


