#include "ioap123.h"

//affiche triangle avec de 1 vers n

void afflgn(int n){
  int a;

  for(a=1;a<=n;a=a+1){
    print_int(a);
    print_char(' ');}}




void afftrg(int n){
  int a;
  for (a=1;a<=n;a=a+1){
    afflgn(a);
    print_newline();}}

//affiche triangle de n vers 1

void afflgn(int n){
  int a,i;

  for(a=1,i=n;a<=i;i=i-1){
    print_int(i);
    print_char(' ');}}


void afftrg(int n){
  int a;
  for (a=1;a<=n;a=a+1){
    afflgn(a);
    print_newline();}}

int main();{
  int x;
  print_text("Rentrez un nombre : ");
  x=read_int();
  afftrg(x);
  return 0;}


